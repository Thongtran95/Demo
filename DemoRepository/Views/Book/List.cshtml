@using DemoRepository.Data.Model
@model List<Book>
@{
    ViewBag.Title = "List";
         Layout = "_Layout";
}
<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Book" asp-action="Create">Create new book</a>
<a asp-action ="List" asp-route-sortOrder="name_desc" > SortByName</a>
<form asp-action="List" method="POST">
    <div class="row input-group" >
        <input type="text" name="search" id="search" class="form-control"/>
    
        <div class="input-group-btn">
            <input type="submit" value="Search" class="btn btn-primary"/>
        </div>
    </div>
</form>
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Authors name</th>
        <th>Edit book</th>
        <th>Delete book</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Book book in Model)
    {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.Author.Name</td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Update" asp-route-id="@book.BookId">Edit</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@book.BookId" asp-route-authorId="@ViewBag.AuthorId">Delete</a></td>
        </tr>
    }
    </tbody>
</table>
